mixin footerColumn(title, contents)
    .col-4.col-lg.mt-3.mt-lg-0
        h6.fw-bold= title.title
        ul.nav.flex-column.w-100.mt-lg-3
            each val, key in contents
                li.nav-item.mt-3
                    a.nav-link.p-0.text-white(href=val)= key

